<div class="container-fuid m-4 pt-5">
  <table
    id="example"
    class="table table-striped table-bordered mt-5 p-4"
    cellspacing="0"
    width="100%"
  >
    <thead>
      <tr>
        <th>Date</th>
        <th>Details</th>
        <th>Payment Method</th>
        <th>Status</th>
        <th>Amount</th>
        <th>change Status</th>
      </tr>
    </thead>
    <tbody>
      {{#each Items}}
        <tr>
          <td>{{this.date}}</td>
          <td>{{this.deliveryDetails.address}}
            <br />
            {{this.deliveryDetails.city}}
            <br />
            {{this.deliveryDetails.country}}</td>
          <td>{{this.paymentMethod}}</td>
          <td>{{this.status}}</td>
          <td data-order="1000">â‚¹{{this.deliveryDetails.totalAmount}}</td>
          <td data-order="1000">
            <button
              onclick="changeOrderStatus('{{this._id}}','pending')"
              class="btn btn-primary"
            >Pending</button>
            <button
              onclick="changeOrderStatus('{{this._id}}','delivered')"
              class="btn btn-primary"
            >Delivered</button>
            <button
              onclick="changeOrderStatus('{{this._id}}','cancelled')"
              class="btn btn-primary"
            >Cancel</button>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>