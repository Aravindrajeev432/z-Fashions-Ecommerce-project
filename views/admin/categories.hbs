<section>
    <div class="container" >
        <div class="row mt-3 mb-5">
            <a href="/admin/add-categories" class="btn btn-success ms-auto" style="width: fit-content;">Add Category</a>
        </div>
        <table class="table mt-5" id="usersTable" style="background-color: rgb(212, 231, 239);">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Categories</th>
                   
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                    
                    {{!-- <th scope="col">Price</th>
                    <th scope="col">Image</th> --}}
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr>
                    <th scope="row">*</th>
                    <td>{{this.category}}</td>
                    
                    {{!-- <td>{{this.description}}</td>
                    <td><img style="width: 50px;height: 50px;" src="{{this.image}}" alt=""></td> --}}
                    <td>
                        <a href="/admin/update-user/{{this._id}}" class="btn btn-info">Update</a>
                        </td>
                        <td>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                            onclick="return confirm('Are you want to delete {{this.Name}} ?')">Delete</a>

                    </td>
                      
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
