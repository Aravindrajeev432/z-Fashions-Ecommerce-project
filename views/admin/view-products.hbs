<section class="usertable">
    <div class="container" >
        <div class="row mt-3 mb-2">
            <a href="/admin/add-products" class="btn btn-success ms-auto" style="width: fit-content;">Add Product</a>
        </div>
        <table class="table mt-2" id="usersTable">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">name</th>
                    <th scope="col">category</th>
                    <th scope="col">price</th>
                    <th scope="col">image</th>
                    
                    {{!-- <th scope="col">Price</th>
                    <th scope="col">Image</th> --}}
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                
                
                    <a href="">
                    <th scope="row">*</th>
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.price}}</td>
                    <td><img style="width: 50px; height:50px;" src="/{{this.Image.[0]}}" alt=""></td>
                    {{!-- <td>{{this.description}}</td>
                    <td><img style="width: 50px;height: 50px;" src="{{this.image}}" alt=""></td> --}}
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-info">edit</a>
                        </td>
                    <td>
                        <a href="/admin/specific-offer/{{this._id}}" class="btn btn-info">Add offer</a>
                        </td>
                        <td>
                        <a href="/admin/product-delete/{{this._id}}" class="btn btn-danger"
                            onclick="return confirm('Are you want to delete {{this.Name}} ?')">Delete</a>

                    </td>
                 
                </tr>
                
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
