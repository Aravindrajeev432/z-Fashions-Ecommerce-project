<section class="usertable">
    <div class="container" >
        <div class="row mt-3 mb-2">
            <a href="/admin/add-user" class="btn btn-success ms-auto" style="width: fit-content;">Add User</a>
        </div>
        <table class="table mt-2 table-borderless" id="usersTable" >
            <thead>
                <tr class="bg-dark text-white mb-5">
                   
                    <th scope="col">User name</th>
                    <th scope="col">Password</th>
                   
                    <th scope="col"></th>
                    <th scope="col">Delete</th>
                    <th scope="col">block</th>
                    {{!-- <th scope="col">Price</th>
                    <th scope="col">Image</th> --}}
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr> 
                   
                    <td>{{this.Email}}</td>
                    <td>{{this.Password}}</td>
                    {{!-- <td>{{this.description}}</td>
                    <td><img style="width: 50px;height: 50px;" src="{{this.image}}" alt=""></td> --}}
                   <!-- <td>
                        <a href="/admin/update-user/{{this._id}}" class="btn btn-info">Update</a>
                        </td>-->
                        <td>
                        <a href="/admin//view-user/{{this._id}}" class="btn btn-danger"
                           >View</a>

                    </td>
                        <td>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                            onclick="return confirm('Are you want to delete {{this.Name}} ?')">Delete</a>

                    </td>
                        <td>
                             {{#if this.block}}
                        <a href="/admin/Un-Block-user/{{this._id}}" class="btn btn-danger"
                            onclick="return confirm('Do you want to UnBlock {{this.Name}} ?')">UnBlock</a>
                           {{else}}
                       <a href="/admin/Block-user/{{this._id}}" class="btn btn-success w-auto ms-auto">Block</a>
                       {{/if}}
                    </td>
                    
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
