<div class="container">
  <div class="main-body mt-5">


    <div class="row gutters-sm mt-2">
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
              <img
                src="https://bootdey.com/img/Content/avatar/avatar7.png"
                alt="Admin"
                class="rounded-circle"
                width="150"
              />
              <div class="mt-3">
                <h4>{{user.Email}}</h4>
                <p class="text-secondary mb-1">Premium Account</p>
                <p class="text-muted font-size-sm">Bay Area, San Francisco, CA</p>
                <button class="btn btn-primary">Edit Avatar</button>
                <button class="btn btn-outline-primary">Message</button>
              </div>
            </div>
          </div>
        </div>

      </div>

      <div class="col-md-8">
        <div class="card mb-3">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Name</h6>
              </div>
              <div class="col-sm-9 text-secondary">
               {{user.Email}}
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Email</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                {{user.userEmail}}
              </div>
            </div>
            
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Mobile</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                {{data.phone}}
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Password</h6>
              </div>
              <div type="password" class="col-sm-9 text-secondary">
               **************  <a class="text-decoration-none" href="/change-password/{{user._id}}"><i class=" ml-5 fi fi-rr-pencil"></i></a> 
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-12">
                <a
                  class="btn btn-info"
                
                  href="/profile-edit/{{user._id}}"
                >Edit</a>
              </div>
            </div>
          </div>
        </div>
      
        
        <div class="card mb-3">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Address</h6>
              </div>
              <div class="col-sm-9 text-secondary">
               {{user.deliveryAddress.Address}}
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Apartment</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                {{user.deliveryAddress.Apartment}}
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Mobile</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                {{user.deliveryAddress.deliveryPhone}}
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Zipcode</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                {{user.deliveryAddress.Zipcode}}
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">City</h6>
              </div>
              <div type="password" class="col-sm-9 text-secondary">
              {{user.deliveryAddress.City}}
              </div>
            </div>
            <hr />
             
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">State</h6>
              </div>
              <div type="password" class="col-sm-9 text-secondary">
               {{user.deliveryAddress.State}}
              </div>
            </div>
             <hr />
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Country</h6>
              </div>
              <div type="password" class="col-sm-9 text-secondary">
               {{user.deliveryAddress.Country}}
              </div>
            </div>
             <hr />
            <div class="row">
              <div class="col-sm-12">
                <a
                  class="btn btn-info"
                  target="__blank"
                  href="/user-profile-update"
                >Edit</a>
              </div>
            </div>
          </div>
        </div>

        
      </div>

  
      



    </div>
    

  </div>
</div>